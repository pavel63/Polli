<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/alertDialogQuestionEt"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/question_hint_example"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/alertDialogQuestionEt"
        android:layout_height="100dp"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@id/space"
        android:hint="@string/answer_hint_example"
        android:id="@+id/alertDialogAnswerEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>